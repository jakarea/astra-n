# Astra E-commerce Dashboard - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Astra
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase Database
DATABASE_URL="postgresql://postgres.your-ref:password@aws-0-eu-central-1.pooler.supabase.com:5432/postgres?sslmode=require"
DIRECT_URL="postgresql://postgres:password@db.your-ref.supabase.co:5432/postgres?sslmode=require"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-app.vercel.app
JWT_SECRET=your-jwt-secret-here

# Encryption keys
ENCRYPTION_KEY=your-32-character-encryption-key

# CSRF Protection
CSRF_SECRET=your-csrf-secret-here

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Email Service (SendGrid/Resend)
EMAIL_FROM=noreply@your-domain.com
SENDGRID_API_KEY=your-sendgrid-api-key
# OR
RESEND_API_KEY=your-resend-api-key

# File Storage (AWS S3/Vercel Blob)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-bucket-name
# OR
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Payment Processing (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://your-app.vercel.app/api
API_TIMEOUT=30000
API_RATE_LIMIT=100

# External API Keys
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_URL=https://api.external-service.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_TELEGRAM_NOTIFICATIONS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_REAL_TIME_SYNC=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only set these in development
ANALYZE=false
SKIP_ENV_VALIDATION=false
DISABLE_ESLINT=false

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# =============================================================================
# CACHING
# =============================================================================
REDIS_URL=redis://your-redis-url
CACHE_TTL=3600

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# These are typically set by Vercel automatically
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=your-app.vercel.app
VERCEL_GIT_COMMIT_SHA=abc123
VERCEL_GIT_COMMIT_MESSAGE="Deploy to production"